<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        app:navigationIcon="@drawable/icon_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/card_detail"
        app:titleMarginStart="18dp"
        app:titleTextColor="@color/color_text_white"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <ImageView
                android:id="@+id/iv_card_large_img"
                android:layout_width="wrap_content"
                android:layout_height="430dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_card_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_card_large_img"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="卡牌描述"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_text_title"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="6dp"
                tools:text="卡牌描述"/>

            <TextView
                android:id="@+id/tv_card_rarity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_text"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="稀有度"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_card_rarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_card_rarity_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@+id/tv_card_rarity_title"
                tools:text="稀有"/>

            <TextView
                android:id="@+id/tv_card_color_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_rarity_title"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="颜色"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_card_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_card_color_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@+id/tv_card_color_title"
                tools:text="红色"/>

            <TextView
                android:id="@+id/tv_card_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_color_title"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="类型"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_card_type_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@+id/tv_card_type_title"
                tools:text="英雄"/>

            <TextView
                android:id="@+id/tv_card__title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_type_title"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="卡包"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_card_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_card__title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@+id/tv_card__title"
                tools:text="武装号召"/>

            <TextView
                android:id="@+id/tv_card_illustrator_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card__title"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="画师"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_card_illustrator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_card_illustrator_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@+id/tv_card_illustrator_title"
                tools:text="x'x'x"/>

            <TextView
                android:id="@+id/tv_card_ref_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_illustrator_title"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="相关卡牌"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_ref_card_list"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/tv_card_ref_card"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="6dp"/>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>